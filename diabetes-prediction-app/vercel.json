{
    "builds": [
        {
            "src": "frontend/package.json",
            "use": "@vercel/nextjs"
        },
        {
            "src": "backend/app/main.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "50mb"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "backend/app/main.py"
        },
        {
            "src": "/(.*)",
            "dest": "frontend"
        }
    ],
    "functions": {
        "backend/app/main.py": {
            "memory": 2048,
            "maxDuration": 30
        }
    }
}